{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@common/*": ["common/*"],
      "@e2e/*": ["e2e/*"],
      "@e2e/aos/*": ["e2e/android-app/*"],
      "@e2e/ios/*": ["e2e/ios-app/*"],
      "@e2e/pc-mobile-web/*": ["e2e/pc-mobile-web/*"],
      "@e2e/ios-mobile-web/*": ["e2e/ios-mobile-web/*"],
      "@e2e/pc/*": ["e2e/pc-web/*"],
      "@pubsub/*": ["pubsub/*"]
    },
    "outDir": "dist",
    "rootDir": "./",
    "module": "NodeNext",
    "target": "ES2022",
    "types": ["node"],
    "declaration": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "noEmitOnError": false,
    "lib": ["ES2022", "DOM"],
    "allowJs": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "typeRoots": ["common/types", "./node_modules/@types"],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "common",
    "e2e",
    "speedtest",
    "batch",
    "pubsub",
    "mosaic-db",
    "tests",
    "tests-examples",
    "GlobalSetup.ts",
    "GlobalTeardown.ts",
    "playwright.config.ts",
    "common/utils/test/ScriptRunner.ts"
  ],
  "exclude": ["node_modules", "dist", "example"]
}
